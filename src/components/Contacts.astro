---
import { siTelegram } from "simple-icons";
import yclientsIcon from "../images/icons/yclients.svg";
import { yclientsUrl } from "./Navigation.astro";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section class="contacts-section" id={id}>
  <div class="contacts-container">
    <a href="tel:+79175730053" class="contact-link-with-number">
      <span class="phone-number">+7 917 573-00-53</span>
    </a>

    <a
      href="https://t.me/kresloodno"
      class="contact-link"
      aria-label="записаться через Telegram"
    >
      <svg
        class="messenger-icon"
        role="img"
        viewBox="-2 -2 28 28"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d={siTelegram.path}></path>
      </svg>
      <div class="messenger-username">kresloodno</div>
    </a>

    <a
      href={yclientsUrl}
      class="contact-link"
      aria-label="записаться через Telegram"
    >
      <img src={yclientsIcon.src} alt="YClients" class="yclients-icon" />
      <div class="messenger-username">Онлайн-запись</div>
    </a>
  </div>
</section>

<style>
  .contacts-section {
    display: flex;
    justify-content: center;
    padding: 4rem var(--padding-horizontal);
  }

  .contacts-container {
    display: flex;
    flex-direction: column;
    row-gap: 2.5rem;
    column-gap: 1rem;
    align-items: center;

    & svg {
      display: block;
      overflow: visible;
    }
  }

  .section-title {
    font-size: 1rem;
    text-align: right;
  }

  .contact-link-with-number {
    color: inherit;
    text-decoration: none;
    display: flex;
    gap: 0.33rem;
    white-space: nowrap;

    & .phone-number {
      font-size: 1rem;
    }

    &:hover {
      opacity: 0.7;
    }
  }

  .contact-link {
    text-decoration: none;
    width: fit-content;
    display: flex;
    align-items: center;

    gap: 0.2rem;

    &:visited {
      color: inherit;
    }

    & .messenger-icon {
      width: 1.1rem;
      height: 1.1rem;
      transform: translateY(1px);
    }

    & .messenger-username {
      color: black;
      border-bottom: 0.5px solid rgba(0, 0, 0);
    }

    & .yclients-icon {
      width: 0.95rem;
      height: 0.95rem;
      transform: translateY(1px);
    }

    &:hover {
      opacity: 0.7;
    }
  }
</style>
