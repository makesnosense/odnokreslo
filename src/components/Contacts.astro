---
import { siTelegram } from "simple-icons";
import yclientsIcon from "../images/icons/yclients.svg";
import { yclientsUrl } from "./Navigation.astro";
import Link from "./Link.astro";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section class="contacts-section" id={id}>
  <Link href={yclientsUrl} label="Онлайн-запись" external>
    <img src={yclientsIcon.src} alt="YClients" class="yclients-icon" />
  </Link>

  <Link href="https://t.me/kresloodno" label="kresloodno" external>
    <svg
      class="telegram-icon"
      role="img"
      viewBox="-2 -2 28 28"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d={siTelegram.path}></path>
    </svg>
  </Link>

  <a href="tel:+79175730053" class="contact-link-with-number">
    <span class="phone-number">+7 917 573-00-53</span>
  </a>

  <style>
    .contacts-section {
      display: flex;
      flex-direction: column;
      row-gap: 3.3rem;
      column-gap: 1rem;
      align-items: center;
      padding: 4rem var(--padding-horizontal);

      & svg {
        overflow: visible;
      }
    }

    .section-title {
      font-size: 1rem;
      text-align: right;
    }

    .contact-link-with-number {
      color: inherit;
      text-decoration: none;
      display: flex;
      gap: 0.33rem;
      white-space: nowrap;

      & .phone-number {
        font-size: 1rem;
      }

      &:hover {
        opacity: 0.7;
      }
    }

    .telegram-icon {
      width: 1.1rem;
      height: 1.1rem;
    }

    .yclients-icon {
      width: 0.9rem;
      height: 0.9rem;
    }
  </style>
</section>
