---
import { Copy, Check } from "@lucide/astro";
---

<button
  class="copy-address-btn"
  title="Скопировать адрес"
  aria-label="Скопировать адрес"
>
  <Copy class="copy-icon" size={14} />
  <Check class="check-icon" size={14} />
</button>
<style>
  .copy-address-btn {
    position: absolute;
    top: 50%;
    right: 0.55rem;
    transform: translateY(-50%);
    background: transparent;
    border: 1px solid rgba(0, 0, 0, 0.45);
    border-radius: 6px;
    padding: 6px;
    color: rgba(0, 0, 0, 0.7);
    cursor: pointer;
    transition: all 0.3s ease;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .copy-address-btn:hover {
    border-color: rgba(0, 0, 0, 0.25);
    color: rgba(0, 0, 0, 0.45);
  }

  .copy-address-btn.copied {
    color: rgba(0, 0, 0, 0.7);
    border-color: rgba(0, 0, 0, 0.45);
    background: rgba(0, 0, 0, 0.03);
  }

  .check-icon {
    display: none;
  }

  .copy-address-btn.copied .copy-icon {
    display: none;
  }

  .copy-address-btn.copied .check-icon {
    display: block;
  }
</style>
