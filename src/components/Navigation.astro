---
import Link from "./Link.astro";

const navItems = [
  { label: "Работы", href: "#portfolio", hideOnMobile: true },
  { label: "Услуги", href: "#services" },
  { label: "Контакты", href: "#contacts" },
];

export const yclientsUrl = "https://n1968617.yclients.com";
---

<nav class="navigation">
  {navItems.map((item) => <Link {...item} />)}

  <Link href={yclientsUrl} label="Запись" external />
</nav>

<style>
  .navigation {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    z-index: 100;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    padding: 1.25rem var(--padding-horizontal);
  }
</style>
