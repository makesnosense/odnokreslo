---
import { siTelegram, siWhatsapp } from "simple-icons";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section class="book-an-appointment-section" id={id}>
  <h2 class="section-title">Запись:</h2>
  <div class="contacts-container">
    <a href="tel:+79175730053" class="contact-link-with-number">
      <span class="phone-number">+7 917 573-00-53</span>
    </a>
    <a
      href="https://t.me/kresloodno"
      class="contact-link"
      aria-label="записаться через Telegram"
    >
      <svg
        class="messenger-icon"
        role="img"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d={siTelegram.path}></path>
      </svg>
    </a>

    <a
      href="https://wa.me/message/SJSNIMWPB2UOJ1"
      class="contact-link"
      aria-label="записаться через WhatsApp"
    >
      <svg
        class="messenger-icon"
        role="img"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d={siWhatsapp.path}></path>
      </svg>
    </a>
  </div>
</section>

<style>
  .book-an-appointment-section {
    display: flex;
    justify-content: center;
    column-gap: 1rem;
    padding: 2rem var(--padding-horizontal);
    padding-bottom: 4rem;
  }

  .contacts-container {
    display: flex;
    flex-direction: column;
    row-gap: 2.5rem;
    column-gap: 1rem;
    align-items: left;

    & svg {
      display: block;
      overflow: visible;
    }
  }

  .section-title {
    font-size: 1rem;
    text-align: right;
  }

  .contact-link-with-number {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.33rem;
    white-space: nowrap;

    & .phone-number {
      font-size: 1rem;
    }

    &:hover {
      opacity: 0.7;
    }
  }

  .contact-link {
    grid-column: 2;
    color: inherit;
    text-decoration: none;

    & .messenger-icon {
      width: 2rem;
      height: 2rem;
    }

    &:hover {
      opacity: 0.7;
    }
  }
</style>
