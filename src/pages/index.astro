---
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Portfolio from "../components/Portfolio.astro";
import ServicesHaircuts from "../components/services/ServicesHaircuts.astro";
import ServicesColoring from "../components/services/ServicesColoring.astro";
import Location from "../components/location/Location.astro";
import Appointment from "../components/Appointment.astro";
import ScrollReveal from "../components/ScrollReveal.astro";
import SEO from "../components/SEO.astro";
import StructuredData from "../components/StructuredData.astro";
import ServicesOther from "../components/services/ServicesOther.astro";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <SEO />
    <StructuredData />
    <ScrollReveal />
    <script is:inline>
      document.documentElement.style.setProperty(
        "--viewport-height",
        `${window.innerHeight}px`,
      );
    </script>
  </head>
  <body>
    <Navigation />
    <Hero />
    <Portfolio id="portfolio" />
    <ServicesHaircuts id="services" />
    <ServicesColoring />
    <ServicesOther />
    <Appointment id="contacts" />
    <Location />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    font-family:
      Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans", Arial,
      sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --padding-vertical: 4rem;
    --padding-horizontal: clamp(2.5rem, 5vw, 4rem);

    @media (max-width: 340px) {
      --padding-horizontal: 1.5rem;
    }
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    min-height: 100dvh;
    overflow-x: hidden;
    background: white;
    color: black;
    text-transform: uppercase;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0;
    padding: 0;
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
    font-family: inherit;
  }
</style>
