---
import Hero from "../components/Hero.astro";
import ServicesHaircuts from "../components/services/ServicesHaircuts.astro";
import ServicesColoring from "../components/services/ServicesColoring.astro";
import Location from "../components/Location.astro";
import Appointment from "../components/Appointment.astro";
---

<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="yandex-verification" content="991a1622ff9eda07" />
		<meta
			name="description"
			content="Одно Кресло — стрижка и окрашивание волос в Москве. Студия на Новом Арбате."
		/>
		<title>ОДНО КРЕСЛО — стрижка и окрашивание</title>
	</head>
	<body>
		<Hero />
		<ServicesHaircuts />
		<ServicesColoring />

		<Appointment />
		<Location />
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
			Arial, sans-serif;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--padding-vertical: 4rem;
		--padding-horizontal: clamp(2.5rem, 5vw, 4rem);
	}

	body {
		min-height: 100vh;
		overflow-x: hidden;
		background: white;
		color: black;
		text-transform: uppercase;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	p {
		margin: 0;
		padding: 0;
		font-size: inherit;
		font-weight: inherit;
		line-height: inherit;
		font-family: inherit;
	}
</style>
